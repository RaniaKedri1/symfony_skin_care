{# templates/categorie/ajouter_categorie.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    <div class="container " style="min-height:200px; margin-top:80px">
        <div class="card">
            <div class="card-header bg-light text-white">
                <h1 class="mb-0">Modifier Categorie</h1>
            </div>
            <div class="card-body">
                {# templates/categorie/_form.html.twig #}

                {{ form_start(form, {'attr': {'class': 'form'}}) }}

                    {{ form_row(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Category Name'}}) }}

                    {{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Category Description'}}) }}

                    {# Add more form fields as needed, each with the appropriate Bootstrap classes #}

                    <div class="form-group mt-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}
