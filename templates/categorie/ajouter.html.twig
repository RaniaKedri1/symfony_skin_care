{% extends 'base.html.twig' %}

{% block title %}Ajouter Produit{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="mt-4 mb-4 text-center text-primary">Ajouter Produit</h1>

                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="form-group">
                    {{ form_label(form.libelle, 'Libelle', {'label_attr': {'class': 'col-sm-2 control-label text-info'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.is_disponible, 'Is Disponible', {'label_attr': {'class': 'col-sm-2 control-label text-info'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.is_disponible, {'attr': {'class': 'form-check-input'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'col-sm-2 control-label text-info'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.marque, 'Marque', {'label_attr': {'class': 'col-sm-2 control-label text-info'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.marque, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.imageFile, 'Image File', {'label_attr': {'class': 'col-sm-2 control-label text-info'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control-file'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.categorie, 'Categorie', {'label_attr': {'class': 'col-sm-2 control-label text-info'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.Valider, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                </div>

                {{ form_end(form) }}

                <a href="{{ path('listProduit') }}" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
{% endblock %}
