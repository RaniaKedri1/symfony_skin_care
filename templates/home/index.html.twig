{% extends 'base.html.twig' %}

{% block body %}
            <!-- Hero Start -->
        <div class="hero">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-sm-12 col-md-6">
                        <div class="hero-text">
                            <h1>DESERVE TO BE BEAUTIFUL</h1>
                            <p>
                                Self care starts with with skin care 
                            </p>
                            <div class="hero-btn">
                                <a class="btn" href="">Join Now</a>
                                <a class="btn" href="">Contact Us</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6 d-none d-md-block">
                        <div class="hero-image">
                            <img src="images/home2.png" alt="Hero Image">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero End -->


        <!-- About Start -->
        <div class="about wow fadeInUp" data-wow-delay="0.1s">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-5 col-md-6">
                        <div class="about-img">
                            <img src="images/foam.png" alt="Image">
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-6">
                        <div class="section-header text-left">
                            <p>Learn About Us</p>
                            <h2>Welcome to LAHWA</h2>
                        </div>
                        <div class="about-text">
                            <p>

                                Welcome to LAHWA, where beauty meets affordability. Our website is your go-to destination for quality skincare without breaking the bank. Experience the luxury of radiant skin at prices that make self-care accessible for everyone.</p>
                            <p>
                                LAHWA is committed to delivering effective, budget-friendly solutions, ensuring that your journey to glowing skin is not only transformative but also affordable. Discover skincare that fits your lifestyle and budget â€“ because beauty should be within reach for all.</p>
                            <a class="btn" href="">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- About End -->


        <!-- Service Start -->
        <div class="service">
            <div class="container">
                <div class="section-header text-center wow zoomIn" data-wow-delay="0.1s">
                    <p>Our Categories</p>
                    <h2>Spoil your skin</h2>
                </div>
                <div class="row">
                {% for categorie in categories %}
                    
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.2s">
                        <div class="service-item">
                            <div>
                                <img src="images/products.png" style="width:80px;height:80px" alt="Image">
                                {# <i class="flaticon-workout"></i> #}
                            </div>
                            <h3>
                            <a href="{{ path('categorie_show', {'id': categorie.id}) }}" >{{ categorie.nom }}</a>
                            </h3>
                            <p>{{ categorie.description }}</p>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
        <!-- Service End -->
        
{% endblock %}
